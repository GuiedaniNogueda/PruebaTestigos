<div>
  <table>
    <thead>
      <tr>
        <th>Line number</th>
        <th>Format</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @lines.each do |line| %>
        <tr>
          <td><%= line.line_number %></td>
          <td><%= line.format_id %></td>
          <td><%= line.start_date %></td>
          <td><%= line.end_date %></td>
          <% if @creative_selected != nil %>
            <td>
              <%= form_for [@order, @page] do |f| %>
                <% if @page.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
                    <ul>
                      <% @page.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div style="display: none">
                  <%= f.text_field :creative_id, :value => @creative_selected.id %>
                </div>
                <div style="display: none">
                  <%= f.text_field :line_id, :value => line.id %>
                </div>
                <div class="actions">
                  <%= f.submit %>
                </div>
              <% end %>
            </td>
          <% end %> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div>
  <%= link_to 'Agregar Nueva Linea', new_order_line_path(@order)%>
</div>