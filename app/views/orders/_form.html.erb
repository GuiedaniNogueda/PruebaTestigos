<%= form_for @order, :html => {:class => "form-horizontal"} do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :order_number, class: "col-md-4 control-label" %>
    <div class="col-md-7">
      <%= f.number_field :order_number, class: "form-control" %>  
    </div>
  </div>
  <div class="form-group">
    <%= f.label :campaign, class: "col-md-4 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :campaign, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :agency_id, class: "col-md-4 control-label" %>
    <div class="col-lg-7">
    <%= f.collection_select :agency_id, Agency.order(:agency_name), :id, :agency_name, include_blank: false, :html => {:class => "form-control"} %>
    <%= f.collection_select (:agency, :agency_id, Agency.order(:agency_name), :id, :agency_name, prompt: true) %>    
    </div>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :site_id %><br>
    <%= f.number_field :site_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
