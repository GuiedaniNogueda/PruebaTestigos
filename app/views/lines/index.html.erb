<h1>Listing lines</h1>

<table>
  <thead>
    <tr>
      <th>Line number</th>
      <th>Format</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.each do |line| %>
      <tr>
        <td><%= line.line_number %></td>
        <td><%= line.format_id %></td>
        <td><%= line.start_date %></td>
        <td><%= line.end_date %></td>
        <td><%= link_to 'Show', line %></td>
        <td><%= link_to 'Edit', edit_line_path(line) %></td>
        <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

