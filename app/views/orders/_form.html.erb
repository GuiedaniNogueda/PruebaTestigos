<%= form_for @order, :html => {:class => "form-horizontal"} do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="form-group">
    <%= f.label :order_number, "No. Orden", class: "col-md-4 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :order_number, class: "form-control" %>  
    </div>
  </div>
  <div class="form-group">
    <%= f.label :campaign, "CampaÃ±a", class: "col-md-4 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :campaign, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :agency_id, "Agencia", class: "col-md-4 control-label" %>
    <div class="col-lg-7">
    <%= f.collection_select :agency_id, Agency.all, :id, :agency_name, {:prompt => 'Seleccione Agencia'}, {:class=>'form-control'} %>
    </div>
  </div>


  <div class="form-group">
      <%= f.label :start_date, "Fecha Inicio", :class => "col-md-4 control-label" %>

     <div class="col-md-7">
      <div class="input-group date">
        <%= f.text_field :start_date, :class => "form-control input-sm" %><span class="input-group-addon input-sm"><i class="glyphicon glyphicon-calendar"></i></span>
      </div>
      <script type="text/javascript">
        $('.input-group.date').datepicker({
          format: "yyyy-mm-dd",
          language: "es",
          autoclose: true,
          todayHighlight: true
        });
      </script>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :end_date, "Fecha Fin", :class => "col-md-4 control-label" %>

     <div class="col-md-7">
      <div class="input-group date">
        <%= f.text_field :end_date, :class => "form-control input-sm" %><span class="input-group-addon input-sm"><i class="glyphicon glyphicon-calendar"></i></span>
      </div>
      <script type="text/javascript">
        $('.input-group.date').datepicker({
          format: "yyyy-mm-dd",
          language: "es",
          autoclose: true,
          todayHighlight: true
        });
      </script>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :site_id, "Sitio", class: "col-md-4 control-label" %>
    <div class="col-lg-7">
    <%= f.collection_select :site_id, Site.all, :id, :site_name, {:prompt => 'Seleccione el sitio'}, {:class=>'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4"></div>
      <div class="col-md-7">
        <div class="actions">
          <%= f.submit "Siguiente", :class=>'btn btn-primary pull-right'%>
        </div>
      </div>
  </div>

<% end %>
